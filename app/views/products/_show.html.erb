<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h3><%= "Editing #{@product.name}" %></h3>
		</div>
		<%= form_for @product, remote: true, html: { class: "form-horizontal", style: "display:inline;" } do |f| %>

		<div class="modal-body">
			<div class="container">
				<ul class="errors"></ul>

				<div class="form-group">
					<%= f.label :name, class:"control-label" %>
					<div class="controls">
						<%= f.label :name, @product.name, class:"control-label" %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :price, class: "control-label" %>
					<div class="controls">
						<%= f.label :price, @product.price, class: "control-label" %>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<%= link_to "Ã—", "#", class: "btn", data: {dismiss: "modal"} %>
		</div>

		<% end %>

	</div>
</div>